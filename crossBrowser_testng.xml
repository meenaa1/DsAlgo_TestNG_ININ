<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="CrossBrowserSuite" parallel="tests" >

	<listeners>
		<!-- <listener class-name="com.aventstack.chaintest.plugins.ChainTestListener" />-->
		<listener class-name="Utilities.RetryListener" />
        <listener class-name="Utilities.Listener"/>
	</listeners>

	<test name="ChromeTest">
		<parameter name="browser" value="chrome" />
		<classes>
	
            <class name="TestClasses.GraphTest"/>
            <class name="TestClasses.TreeTest"/>
            <class name="TestClasses.DataStructureTest"/>
      
		</classes>
	</test>
	<test name="FirefoxTest">
		<parameter name="browser" value="firefox" />
		  <classes>
            <class name="TestClasses.GraphTest"/>
            <class name="TestClasses.TreeTest"/>
            <class name="TestClasses.DataStructureTest"/>
        </classes>
	</test>
	<test name="EdgeTest">
		<parameter name="browser" value="edge" />
		  <classes>
            <class name="TestClasses.GraphTest"/>
            <class name="TestClasses.TreeTest"/>
            <class name="TestClasses.DataStructureTest"/>
        </classes>
	</test>
</suite>